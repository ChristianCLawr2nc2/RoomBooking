<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Salas - Room Booking</title>
  <link rel="stylesheet" href="/css/salas/style.css">
</head>
<body>
  <header>
        <div class="titulo">  
            <div class="logo">
                <img src="/assets/logo.png" alt="Logo do Room Booking">
            </div>

            <div class="botao-reservas">
                <a href="/reservas">Reservas</a>
            </div>
            <div class="botao-salas">
                <a href="/salas">Salas</a>
            </div>
            <div class="logout">
                <a href="/login">Sair</a>
            </div>
        </div>
  </header>

  <main>
    <div class="topo">
      <h1 class="page-title">Salas Disponíveis</h1>
      <p class="page-subtitle">Escolha uma sala para fazer sua reserva</p>
    </div>


      <% if (error) { %>
        <div class="error-message">
          <%= error %>
        </div>
      <% } %>

      <% if (salas && salas.length > 0) { %>
        <div class="rooms-grid">
          <% salas.forEach(sala => { %>
            <div class="room-card">
              <div class="room-header">
                <div class="room-info">
                  <div class="room-name">Sala <%= sala.numero %></div>
                  <div class="room-floor"><%= sala.andar %></div>
                </div>
              </div>

              <div class="room-details">
                <div class="room-features">
                  <span class="feature-tag">Wi-Fi</span>
                  <span class="feature-tag">Ar Condicionado</span>
                </div>
              </div>

              <a href="/nova_reserva?sala_id=<%= sala.sala_id %>" class="reserve-button">Reservar Sala</a>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-state-title">Nenhuma sala disponível</div>
        </div>
      <% } %>
    </main>
</body>
</html>